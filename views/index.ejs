	<script type="text/javascript">
		const button = document.getElementById("submit");
			button.addEventListener('click',()=>{
			    let btnText = document.getElementById('btn-text');
			    let from =  document.getElementById('from').value;
			    let to =  document.getElementById('to').value;
			    let unit =  document.getElementById('unit');
			    let amount =  document.getElementById('amount').value;
			    let result =  document.getElementById('result');

			    btnText.innerText = "Converting..."
                let ApiKey = "6b49595dc720345fadeab7816c80cb5e";
			    let url = `https://min-api.cryptocompare.com/data/price?fsym=${from}&tsyms=${to}`

			  fetch(url)
				  .then((response)=>response.json())
				  .then(function (data) {
                      unit.innerHTML = `${amount+" "+from} = ${to +" "+data[to]}`
                      btnText.innerText = "Convert"
					  let calc = parseInt(data[to]) * amount;
                      const total = calc;
                      result.innerText = `${to+" "+total.toLocaleString()}`
                  })
				  .catch(function (err) {
                      console.log(err);
				  });
		});
	</script>
